# Maintainer: Christoph Wiedemann <chwiede@gmail.com>
pkgname=python-tvhc
pkgver=0.1
pkgrel=1
pkgdesc="Simple python implemented client for tvheadend."
arch=('i686' 'x86_64')
url="https://github.com/chwiede/tvhc"
license=('MIT')
groups=()
depends=('python')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=()
md5sums=()

package() {
  gittarget="$srcdir/$pkgname-$pkgver"
  
  if [[ -d "$gittarget" ]]; then
    cd "$gittarget" && git pull origin
  else
  	git clone "$url" "$gittarget"
  fi
  
  # go to source directory
  cd "$srcdir/$pkgname-$pkgver/src"
  
  # setup python stuff
  python setup.py install --root="$pkgdir/" --optimize=1
  
  # copy tools
  mkdir -p $pkgdir/usr/lib/tvhc
  cp tvhcrec.py $pkgdir/usr/lib/tvhc/ 
  cp tvhcwake.py $pkgdir/usr/lib/tvhc/ 
  
  # copy services
  mkdir -p $pkgdir/usr/lib/systemd/system
  cp $startdir/tvhc-wakeup.service $pkgdir/usr/lib/systemd/system/
  
  
}

pkgver() {
  cd "$pkgname"
  git describe --long | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}